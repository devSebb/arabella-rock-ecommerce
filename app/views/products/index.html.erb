<div class="mx-20">
  <%# Search Form and Cart Button %>
  <div class="flex flex-row justify-between items-center w-full">
    <%= form_with url: products_path, method: :get, class: "flex-grow" do |f| %>
      <div class="flex">
        <div class="relative" data-controller="category-dropdown" data-index-page="true">
          <button type="button" data-action="click->category-dropdown#toggle" data-category-dropdown-target="button" class="flex-shrink-0 z-10 inline-flex items-center py-2.5 px-4 text-sm font-medium text-center text-white bg-transparent border border-gray-300 rounded-s-lg hover:bg-gray-800">
            <span data-category-dropdown-target="buttonText">All categories</span>
            <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
            </svg>
          </button>
          <div data-category-dropdown-target="options" class="hidden absolute z-10 w-full bg-gray-800 border border-gray-600 rounded-md mt-1">
            <div data-action="click->category-dropdown#select" data-category="" class="cursor-pointer p-2 hover:bg-gray-700">All categories</div>
            <% ['Guitars', 'Basses', 'Drums', 'Accessories'].each do |category| %>
              <div data-action="click->category-dropdown#select" data-category="<%= category %>" class="cursor-pointer p-2 hover:bg-gray-700"><%= category %></div>
            <% end %>
          </div>
          <%= f.hidden_field :category, data: { category_dropdown_target: "input" } %>
        </div>
        <div class="relative flex-grow border rounded-e-md">
          <%= f.text_field :name, id: "search-dropdown", class: " w-full p-2.5 z-20 text-sm text-gray-100 bg-transparent  focus:outline-gray-800", placeholder: "Search", required: true %>
          <div class="absolute top-0 end-0 flex">
            <%= link_to products_path, class: "p-2.5 text-sm font-medium h-full text-white bg-transparent border-s border-white hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-red-300" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            <% end %>
            <button type="submit" class="p-2.5 text-sm font-medium h-full text-white bg-transparent rounded-e-lg border-s border-white hover:bg-gray-800">
              <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <%# Cart Button %>
    <%= link_to cart_path, class: "relative inline-flex items-center px-2 py-1 bg-white border border-white text-sm font-medium text-center text-white rounded-lg hover:bg-gray-600 ml-4" do %>
      <%= image_tag 'icons/Cart Monocolor.svg', class: 'w-8 h-8 flex-shrink-0 text-white mx-2 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white', style: "fill: white;", alt: 'Shopping cart icon' %>
      <div class="absolute inline-flex items-center justify-center w-6 h-6 text-xs font-bold text-white bg-red-500 border-2 border-white rounded-full -top-2 -end-2 dark:border-gray-900">
        <%= session[:cart] ? session[:cart].values.sum : 0 %>
      </div>
    <% end %>
  </div>

  <%# Product Grid %>
  <div class="grid grid-cols-4 gap-4 w-full mx-auto text-white my-5">
    <% @products.each do |product| %>
      <div class="text-white flex flex-col w-60 border border-white p-6 rounded-lg justify-between">
        <div class="flex justify-center mb-4">
          <% if product.images.attached? %>
            <% product.images.each do |image| %>
              <%= image_tag image, alt: product.name, class: "w-fit h-[200px]" %>
            <% end %>
          <% else %>
            <%= image_tag 'default-product-image.png', alt: 'Default Image', class: "w-auto h-[300px]" %>
          <% end %>
        </div>

        <div class="text-md font-semibold">
          <%= product.name %>
        </div>
        <div class="text-xl mb-4">
          $<%= product.price %>
        </div>
        <div class="flex flex-row justify-between">

          <%= link_to "Details", product_path(product), class: "text-white hover:underline" %>

          <%= form_with url: add_to_cart_path(product), method: :post, local: true do %>
            <button type="submit" class="p-3 text-white rounded-lg border border-white hover:bg-gray-800 shadow shadow-white">
              Add to Cart
            </button>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
