<div>
<%# Search Form %>
<%= form_with url: products_path, method: :get, class: "max-w-lg mx-auto" do |f| %>
  <div class="flex">
    <label for="search-dropdown" class="mb-2 text-sm font-medium sr-only text-white">Search Products</label>
    <button id="dropdown-button" data-dropdown-toggle="dropdown" class="flex-shrink-0 z-10 inline-flex items-center py-2.5 px-4 text-sm font-medium text-center text-white bg-transparent border border-gray-300 rounded-s-lg hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-gray-700 dark:text-white dark:border-gray-600" type="button">All categories <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
    </svg></button>
    <div id="dropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
            <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdown-button">
            <li>
                <button type="button" class="inline-flex w-full px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Guitars</button>
            </li>
            <li>
                <button type="button" class="inline-flex w-full px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Basses</button>
            </li>
            <li>
                <button type="button" class="inline-flex w-full px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Drums</button>
            </li>
            <li>
                <button type="button" class="inline-flex w-full px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Accessories</button>
            </li>
            </ul>
        </div>
    <div class="relative w-full">
      <%= f.text_field :name, id: "search-dropdown", class: "block p-2.5 w-full z-20 text-sm text-gray-100 bg-black rounded-e-lg border-s-gray-50 border-s-2 border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-s-gray-700  dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:border-blue-500", placeholder: "Search Mockups, Logos, Design Templates...", required: true %>
      <div class="absolute top-0 end-0 flex">
        <%= link_to products_path, class: "p-2.5 text-sm font-medium h-full text-white bg-transparent border-s border-white hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
          <span class="sr-only">Reset</span>
        <% end %>
        <button type="submit" class="p-2.5 text-sm font-medium h-full text-white bg-transparent rounded-e-lg border-s border-white hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
          <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
          </svg>
          <span class="sr-only">Search</span>
        </button>
      </div>
    </div>
  </div>
<% end %>
<%#  %>
<%# Product Grid %>
<div class="grid grid-cols-4 gap-4 w-4/5 mx-auto text-white my-5">
  <% @products.each do |product| %>
    <div class="text-white flex flex-col w-60 border border-white p-6">
      <% if product.images.attached? %>
        <% product.images.each do |image| %>
          <%= image_tag image, alt: product.name, class: "w-fit h-[300px] mb-4 items-center" %>
        <% end %>
      <% else %>
        <%= image_tag 'default-product-image.png', alt: 'Default Image', class: "w-full h-auto mb-4" %>
      <% end %>

      <div class="text-lg font-semibold">
        <%= product.name %>
      </div>
      <div class="text-xl mb-4">
        $<%= product.price %>
      </div>
      <div class="flex flex-row justify-between">

        <%= link_to "Details", product_path(product), class: "text-blue-500 hover:underline" %>

        <%= form_with url: add_to_cart_path(product), method: :post, local: true do %>
          <button type="submit" class="p-3 text-white rounded-sm border border-white">
            Add to Cart
          </button>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


<%#  %>
</div>
