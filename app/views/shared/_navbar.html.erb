  <div class="text-center">
     <button class="bg-black rounded-full border border-white p-4 my-6" style="box-shadow: 0 0 15px 5px rgba(255, 255, 255, 0.4);" type="button" data-drawer-target="drawer-navigation" data-drawer-show="drawer-navigation" aria-controls="drawer-navigation">
        <%= image_tag 'icons/Guitar icon.svg', class: 'w-10 h-10', alt: 'guitar-icon' %>
     </button>
  </div>


